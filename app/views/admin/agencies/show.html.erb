<div class="mx-auto max-w-3xl p-4">
  <h1 class="text-2xl font-bold mb-4"><%= @agency.name %></h1>

  <% if @agency.logo.attached? %>
    <%= image_tag @agency.logo, class: "mb-4 h-8 w-16" %>
  <% end %>

  <dl class="space-y-4">
    <div>
      <dt class="font-medium text-gray-700">Website:</dt>
      <dd class="text-gray-900">
        <% if @agency.website.present? %>
          <%= link_to @agency.website, "http://#{@agency.website}", target: "_blank", rel: "noopener" %>
        <% else %>
          N/A
        <% end %>
      </dd>
    </div>

    <div>
      <dt class="font-medium text-gray-700">Location:</dt>
      <dd class="text-gray-900"><%= "#{@agency.city}, #{@agency.state}" %></dd>
    </div>

    <div>
      <dt class="font-medium text-gray-700">Projects:</dt>
      <dd class="text-gray-900"><%= @agency.projects.size %></dd>
    </div>

    <div>
      <dt class="font-medium text-gray-700">Company Size:</dt>
      <dd class="text-gray-900"><%= @agency.company_size %></dd>
    </div>

    <div>
      <dt class="font-medium text-gray-700">Last Updated:</dt>
      <dd class="text-gray-900"><%= @agency.updated_at %></dd>
    </div>
  </dl>

  <div class="mt-6 space-x-4">
    <%= link_to "All Agencies", admin_agencies_path, class: "text-blue-600" %>
    <%= link_to "Edit Agency", edit_admin_agency_path(@agency), class: "text-blue-600" %>
  </div>
</div>