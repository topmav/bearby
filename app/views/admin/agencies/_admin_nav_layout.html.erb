<div class="min-h-full">
  <!-- Minimal admin nav for agencies -->
  <nav class="border-b border-gray-200 bg-white">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="py-4">
        <ul class="flex space-x-4">
          <% if @agency.present? %>
            <li>
              <%= link_to "Agency", admin_agency_path(@agency),
                class: (action_name == "show" ? "text-blue-600 font-semibold" : "text-gray-600 hover:text-gray-900") %>
            </li>
            <li>
              <%= link_to "Projects", projects_admin_agency_path(@agency),
                class: (action_name == "projects" ? "text-blue-600 font-semibold" : "text-gray-600 hover:text-gray-900") %>
            </li>
            <li>
              <%= link_to "Leads", leads_admin_agency_path(@agency),
                class: (action_name == "leads" ? "text-blue-600 font-semibold" : "text-gray-600 hover:text-gray-900") %>
            </li>
            <li>
              <%= link_to "Subscription", subscription_admin_agency_path(@agency),
                class: (action_name == "subscription" ? "text-blue-600 font-semibold" : "text-gray-600 hover:text-gray-900") %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
  
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 mt-8">
    <%= yield %>
  </div>
</div>