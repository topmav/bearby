<tr id="<%= dom_id(project) %>">
  <td class="px-3 py-4"><%= project.title %></td>
  <td class="px-3 py-4"><%= project.client %></td>
  <td class="px-3 py-4"><%= project.industry&.name %></td>
  <td class="px-3 py-4 text-gray-500"><%= time_ago_in_words(project.updated_at) %> ago</td>
  <td class="px-3 py-4 whitespace-nowrap text-right">
    <%= link_to edit_admin_agency_project_path(@agency, project),
          data: { turbo_frame: "modal" },
          class: "text-blue-500 hover:text-blue-700 mr-3 inline-flex items-center align-middle" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
        <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
      </svg>
      <span class="align-middle">Edit</span>
    <% end %>
    <%= link_to admin_agency_project_path(@agency, project),
              data: {
                "turbo-method": "delete",
                "turbo-confirm": "Are you sure you want to delete this project?"
              },
              class: "text-red-500 hover:text-red-700 inline-flex items-center align-middle" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 inline" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
      </svg>
      <span class="align-middle">Delete</span>
    <% end %>
  </td>
</tr>