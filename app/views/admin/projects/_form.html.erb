<%= form_with(model: project, url: admin_agency_projects_path(@agency), class: "space-y-6") do |f| %>
  <% if project.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc space-y-1 pl-5">
              <% project.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="space-y-4">
    <div>
      <%= f.label :title, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <%= f.label :client, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :client, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <%= f.label :description, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :description, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <%= f.label :industry_id, class: "block text-sm font-medium text-gray-700" %>
      <%= f.collection_select :industry_id, Industry.all, :id, :name, { prompt: "Select an industry" }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <%= f.label :outcome, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :outcome, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div class="space-y-2">
      <div class="relative flex items-start">
        <div class="flex h-5 items-center">
          <%= f.check_box :anonymize_client, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
        </div>
        <div class="ml-3 text-sm">
          <%= f.label :anonymize_client, "Anonymize Client", class: "font-medium text-gray-700" %>
          <p class="text-gray-500">Check this if you want to use a different name for the client publicly</p>
        </div>
      </div>

      <div class="ml-7">
        <%= f.label :anonymous_client_name, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :anonymous_client_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>
    </div>

    <div class="relative flex items-start">
      <div class="flex h-5 items-center">
        <%= f.check_box :published, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
      </div>
      <div class="ml-3 text-sm">
        <%= f.label :published, class: "font-medium text-gray-700" %>
        <p class="text-gray-500">Make this project visible on the public site</p>
      </div>
    </div>

    <div>
      <%= f.label :services, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-2 space-y-2">
        <%= f.collection_check_boxes :service_ids, Service.all, :id, :name do |b| %>
          <div class="relative flex items-start">
            <div class="flex h-5 items-center">
              <%= b.check_box class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
            </div>
            <div class="ml-3 text-sm">
              <%= b.label class: "font-medium text-gray-700" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="flex justify-end gap-3">
    <button type="button" data-action="modal#close" class="rounded-md border border-gray-300 bg-white py-2 px-4 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Cancel</button>
    <%= f.submit class: "rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
  </div>
<% end %>
